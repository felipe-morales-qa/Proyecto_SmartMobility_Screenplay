{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node", "playwright"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist"
  },
  "include": [
    "tests/**/*.ts",
    "screenplay/**/*.ts",
    "playwright.config.ts"
  ]
}
